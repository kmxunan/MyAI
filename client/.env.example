# MyAI Client Environment Variables
# Copy this file to .env.local and update the values as needed

# Application Configuration
REACT_APP_NAME=MyAI
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=AI-powered application
REACT_APP_DEBUG=false
PUBLIC_URL=

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# RAG Service Configuration
REACT_APP_RAG_URL=http://localhost:3002
REACT_APP_RAG_TIMEOUT=30000

# WebSocket Configuration
REACT_APP_WS_URL=ws://localhost:3001
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_DELAY=3000

# Authentication Configuration
REACT_APP_TOKEN_KEY=auth-storage
REACT_APP_REFRESH_TOKEN_KEY=refresh-token
REACT_APP_TOKEN_EXPIRY=86400000
REACT_APP_AUTO_REFRESH=true
REACT_APP_REMEMBER_ME=true

# UI Configuration
REACT_APP_THEME=light
REACT_APP_LANGUAGE=zh-CN
REACT_APP_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100
REACT_APP_ANIMATION_DURATION=300
REACT_APP_TOAST_DURATION=3000

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,text/markdown,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
REACT_APP_UPLOAD_CHUNK_SIZE=1048576
REACT_APP_MAX_CONCURRENT_UPLOADS=3

# AI Configuration
REACT_APP_DEFAULT_AI_MODEL=openai/gpt-3.5-turbo
REACT_APP_DEFAULT_TEMPERATURE=0.7
REACT_APP_DEFAULT_MAX_TOKENS=2048
REACT_APP_STREAM_RESPONSE=true
REACT_APP_ENABLE_RAG=true
REACT_APP_RAG_MAX_RESULTS=5
REACT_APP_RAG_SIMILARITY_THRESHOLD=0.7

# Chat Configuration
REACT_APP_MAX_CHAT_MESSAGES=100
REACT_APP_CHAT_AUTO_SAVE=true
REACT_APP_CHAT_SAVE_INTERVAL=30000
REACT_APP_TYPING_INDICATOR=true
REACT_APP_MESSAGE_RETENTION=30

# Cache Configuration
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_TTL=300000
REACT_APP_CACHE_MAX_SIZE=100
REACT_APP_CACHE_STORAGE=localStorage

# Performance Configuration
REACT_APP_LAZY_LOADING=true
REACT_APP_VIRTUALIZATION=true
REACT_APP_DEBOUNCE_DELAY=300
REACT_APP_THROTTLE_DELAY=100
REACT_APP_MAX_CONCURRENT_REQUESTS=6

# Security Configuration
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_XSRF=true
REACT_APP_SANITIZE_INPUT=true
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_LOCKOUT_DURATION=900000

# Monitoring Configuration
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_ANALYTICS_ID=
REACT_APP_ERROR_REPORTING_DSN=

# Development Configuration
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_HOT_RELOAD=true
REACT_APP_LOG_LEVEL=info
REACT_APP_SHOW_REDUX_DEVTOOLS=true

# Third-party Services
REACT_APP_MAP_API_KEY=
REACT_APP_MAP_PROVIDER=google
REACT_APP_PAYMENT_PROVIDER=stripe
REACT_APP_STRIPE_PUBLIC_KEY=
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_GITHUB_CLIENT_ID=
REACT_APP_WECHAT_APP_ID=