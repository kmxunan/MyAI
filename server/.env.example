# 服务器配置
PORT=5000
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/myai
MONGODB_TEST_URI=mongodb://localhost:27017/myai_test

# Redis 配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 客户端配置
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# OpenRouter API 配置
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=openai/gpt-3.5-turbo

# 邮件服务配置 (选择一种方式)
# Gmail 配置
EMAIL_SERVICE=gmail
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-app-password

# 或者 SMTP 配置
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password

# 邮件发送者
EMAIL_FROM=noreply@myai.com

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,xlsx,xls

# RAG 服务配置
RAG_SERVICE_URL=http://localhost:8000
RAG_SERVICE_API_KEY=your-rag-service-api-key

# 向量数据库配置
VECTOR_DB_URL=http://localhost:19530
VECTOR_DB_TOKEN=
VECTOR_COLLECTION_NAME=documents

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 会话配置
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# 开发配置
DEBUG=false
VERBOSE_LOGGING=false

# 生产环境配置
# TRUST_PROXY=true
# SECURE_COOKIES=true
# HTTPS_ONLY=true