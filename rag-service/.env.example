# 服务器配置
PORT=8000
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/myai

# OpenRouter API 配置
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=openai/gpt-3.5-turbo

# 向量数据库配置 (Milvus)
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=19530
VECTOR_DB_USER=
VECTOR_DB_PASSWORD=
VECTOR_COLLECTION_NAME=documents
VECTOR_DIMENSION=1536

# 嵌入模型配置
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_API_KEY=your-openai-api-key
EMBEDDING_BASE_URL=https://api.openai.com/v1

# 文档处理配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,xlsx,xls,ppt,pptx
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 搜索配置
SEARCH_TOP_K=10
SEARCH_SCORE_THRESHOLD=0.7
HYBRID_SEARCH_ALPHA=0.5

# 缓存配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=3600
SEARCH_CACHE_TTL=1800

# RAG 配置
RAG_CONTEXT_WINDOW=4000
RAG_MAX_TOKENS=2000
RAG_TEMPERATURE=0.7
RAG_TOP_P=0.9

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# 安全配置
API_KEY=your-rag-service-api-key
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 性能配置
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
BATCH_SIZE=100

# 开发配置
DEBUG=false
VERBOSE_LOGGING=false

# 主服务器配置
MAIN_SERVER_URL=http://localhost:5000
MAIN_SERVER_API_KEY=your-main-server-api-key