{
  "name": "myai-rag-service",
  "version": "1.0.0",
  "description": "RAG (Retrieval-Augmented Generation) service for MyAI project",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "health": "curl -f http://localhost:3002/health || exit 1",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop rag-service",
    "pm2:restart": "pm2 restart rag-service",
    "security:audit": "npm audit",
    "deps:check": "npm outdated"
  },
  "keywords": [
    "rag",
    "retrieval",
    "augmented",
    "generation",
    "ai",
    "nlp",
    "vector",
    "search",
    "embeddings"
  ],
  "author": "MyAI Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.2",
    "@qdrant/js-client-rest": "^1.7.0",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5",
    "cheerio": "^1.0.0-rc.12",
    "html-to-text": "^9.0.5",
    "langchain": "^0.0.208",
    "@langchain/openai": "^0.0.14",
    "@langchain/community": "^0.0.20",
    "tiktoken": "^1.0.10",
    "gpt-3-encoder": "^1.1.4",
    "uuid": "^9.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3",
    "winston-daily-rotate-file": "^4.7.1",
    "csv-parser": "^3.0.0",
    "markdown-it": "^14.0.0",
    "node-cron": "^3.0.3",
    "mime-types": "^2.1.35",
    "file-type": "^18.7.0",
    "sharp": "^0.33.1",
    "archiver": "^6.0.1",
    "unzipper": "^0.10.14"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jsdoc": "^4.0.2",
    "mongodb-memory-server": "^9.1.3",
    "redis-memory-server": "^0.7.0",
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/logs/**",
      "!**/uploads/**",
      "!**/temp/**",
      "!app.js",
      "!ecosystem.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true
  },
  "eslintConfig": {
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "consistent-return": "off",
      "no-underscore-dangle": ["error", { "allow": ["_id", "__v"] }],
      "max-len": ["error", { "code": 120, "ignoreComments": true }],
      "import/no-extraneous-dependencies": ["error", { "devDependencies": ["**/*.test.js", "tests/**/*.js"] }]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"],
    "*.{json,md}": ["prettier --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ignore": [
      "node_modules",
      "tests",
      "coverage",
      "logs",
      "uploads",
      "temp",
      "*.test.js"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  }
}